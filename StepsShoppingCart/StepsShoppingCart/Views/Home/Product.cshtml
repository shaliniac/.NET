

@model StepsShoppingCart.Models.ProductViewModel

@section featured {
<section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Create a Product</h1>
            </hgroup>
        </div>
</section>
    }


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Product</legend>

        <div class="editor-label">
           @Html.Label("Enter Product Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductName)
            @Html.ValidationMessageFor(model => model.ProductName)

        </div>

        <div class="editor-label">
            @Html.Label("Enter Number of Products Available")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumberOfProductsAvailable)
            @Html.ValidationMessageFor(model => model.NumberOfProductsAvailable)
        </div>

        <div class="editor-label">
            @Html.Label("Enter Product Price")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductPrice)
            @Html.ValidationMessageFor(model => model.ProductPrice)
        </div>

        <p>
            <input type="submit" value="Create Product" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
